<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/CAUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Username"
        android:singleLine="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/CAName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/CAName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Name"
        android:singleLine="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/CAPass"
        app:layout_constraintStart_toStartOf="@+id/CAUsername"
        app:layout_constraintTop_toBottomOf="@+id/CAUsername" />

    <EditText
        android:id="@+id/CAPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Password"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/CACPass"
        app:layout_constraintStart_toStartOf="@+id/CAName"
        app:layout_constraintTop_toBottomOf="@+id/CAName" />

    <EditText
        android:id="@+id/CACPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/CAMail"
        app:layout_constraintStart_toStartOf="@+id/CAPass"
        app:layout_constraintTop_toBottomOf="@+id/CAPass" />

    <EditText
        android:id="@+id/CAMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Email"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/CAAdmin"
        app:layout_constraintStart_toStartOf="@+id/CACPass"
        app:layout_constraintTop_toBottomOf="@+id/CACPass" />

    <CheckBox
        android:id="@+id/CAAdmin"
        android:layout_width="119dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Admin Mode"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/CAButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CAMail" />



    <Button
        android:id="@+id/CAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="Create Account!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CAAdmin" />



</android.support.constraint.ConstraintLayout>
